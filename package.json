{
  "name": "setup-logistica-config",
  "version": "1.0.0",
  "description": "Launcher para alterar filial do sistema de Gestão Logística",
  "author": "Otávio Cardoso",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "clean": "rmdir /s /q .\\out",
    "build-and-install": "npm run clean && npm run package && npm run make"
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@electron-addons/electron-forge-maker-nsis": "^7.0.2",
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "electron": "^39.2.7"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "mssql": "^12.2.0",
    "xml2js": "^0.6.2"
  },
  "build": {
    "asar": true,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Logística Config",
      "perMachine": true,
      "runAfterFinish": false,
      "artifactName": "setup-logistica-config-${version}.exe"
    },
    "win": {
      "target": ["nsis"],
      "publisherName": "Otávio Cardoso"
    }
  }
}
